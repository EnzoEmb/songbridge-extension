{
  "manifest_version": 2,
  "name": "Cross Music Platform Links",
  "version": "1.0",
  "description": "Adds a link to other web music platforms",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*", "*://open.spotify.com/*"],
      "js": ["spotify.js", "youtube.js", "cpml.js"],
      "css": ["assets/css/style.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["https://api.song.link/*"]
}
